             xmlns:modal="clr-namespace:ModalManager.Controls;assembly=ModalManager"
             x:Class="ModalManagerSample.MainPage">

    <Grid>
        <!-- محتوای اصلی صفحه -->
        <StackLayout Padding="20">
            <Button Text="نمایش مودال" Clicked="OnShowModalClicked" />
            <Button Text=" 2نمایش مودال" Clicked="OnShowTwiceModalClicked" />
